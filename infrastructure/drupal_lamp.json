{
  "drupal": {
    "sites": {
      "almonds": {
        "active": true,
        "deploy": {
          "action": ["deploy", "import", "update"],
          "releases": 1
        },
        "drupal": {
          "version": "7.26",
          "install": {
            "install_configure_form.update_status_module": "'array(FALSE,FALSE)'",
            "--clean-url": 1
          },
          "settings": {
            "profile": "abc",
            "files": "docroot/sites/default/files",
            "cookbook": "drupal",
            "docroot": "docroot",
            "settings": {
              "default": {
                "location": "docroot/sites/default/settings.php"
              },
              "abc": {
                "location": "profiles/abc/settings.php"
              }
            },
            "db_name": "abc",
            "db_host": "localhost",
            "db_prefix": "",
            "db_driver": "mysql",
            "db_file": "/vagrant/abc7_7.mysql"
          }
        },
        "repository": {
          "host": "github.com",
          "uri": "git@github.com:timodwhit/abc.git",
          "revision": "dev"
        },
        "web_app": {
          "80": {
            "server_name": "almonds.local",
            "rewrite_engine": "On",
            "docroot": "/srv/www/almonds/current/docroot"
          }
        }
      }
    }
  },
  "nfs_exports": {
    "/assets": {
      "clients": {
        "*": {
          "writeable": true,
          "sync": false,
          "options": [
            "no_subtree_check",
            "all_squash",
            "async"
          ],
          "anon_user_name": "www-data",
          "anon_group_name": "www-data"
        }
      }
    }
  },
  "drupal_frontend": {
    "grunt": false,
    "css_preprocessor":{
      "/srv/www/almonds/current/docroot/profiles/abc/themes/nmd_aurora":{
        "gems": [
          "bundler"
        ],
        "commands": [
          "bundle install && bundle update",
          "bundle exec compass compile"
        ]
      }
    }
  }
}
