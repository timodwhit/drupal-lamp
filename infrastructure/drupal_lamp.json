{
  "drupal": {
    "sites": {
      "abc": {
        "active": true,
        "deploy": {
          "action": ["deploy", "import"],
          "releases": 3
        },
        "drupal": {
          "version": "7.23",
          "settings": {
            "profile": "abc",
            "docroot": "docroot",
            "files": "docroot/sites/default/files",
            "cookbook": "drupal",
            "settings": {
              "default": {
                "location": "docroot/sites/default/settings.php"
              },
              "abc": {
                "location": "profiles/abc/settings.php"
              }
            },
            "db_name": "abc",
            "db_host": "localhost",
            "db_prefix": "",
            "db_driver": "mysql",
            "db_file": "/vagrant/abc2.mysql"
          }
        },
        "repository": {
          "host": "github.com",
          "uri": "git@github.com:timodwhit/abc.git",
          "revision": "dev",
          "remotes": {
            "speedytwenty": "git@github.com:speedytwenty/abc.git",
            "upstream": "git@github.com:newmediadenver/abc.git"
          }
        },
        "web_app": {
          "80": {
            "server_name": "abc.local",
            "docroot": "/srv/www/abc/current/docroot"
          }
        }
      }
    }
  }
}
